#
# logging
#
mylogfile="${HOME}/knary/var/log/knary_syslog"

log()
{
        local now=$(date +"%a %b %d %Y %H:%M:%S"| tr '\n' ' ')
	echo ""Knary::","${now}",${BASH_SOURCE[1]##*/},${BASH_LINENO[0]},$(whoami),"${1}"" >> ${mylogfile}
        if [ "$DEBUG" = "1" ];then
                echo -e ""Knary::", "${now}",${BASH_SOURCE[1]##*/},${BASH_LINENO[0]},$(whoami),"${1}""
        fi
}
